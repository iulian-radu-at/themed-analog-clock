{
  "compilerOptions": {
    "rootDirs": ["src", "stories"],
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": false,
    "sourceMap": true,
    "jsx": "react",
    "skipLibCheck": true,
    "typeRoots": ["index.d.ts", "node_modules/@types"],
    "lib": ["es5", "es6", "dom"],
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./storybook/**/*.tsx",
    "./storybook/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
